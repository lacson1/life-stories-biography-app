<!-- This SVG should be converted to PNG 180x180 for Apple Touch Icon -->
<svg width="180" height="180" viewBox="0 0 180 180" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="appleBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fef7e0;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fed7aa;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="appleBook" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f59e0b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d97706;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="appleHeart" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ef4444;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#dc2626;stop-opacity:1" />
    </linearGradient>
    <filter id="appleShadow">
      <feDropShadow dx="3" dy="6" stdDeviation="6" flood-opacity="0.3"/>
    </filter>
  </defs>
  
  <!-- iOS rounded rectangle background -->
  <rect width="180" height="180" rx="40" fill="url(#appleBg)"/>
  
  <!-- Main book icon -->
  <g transform="translate(30, 30)" filter="url(#appleShadow)">
    <!-- Open book -->
    <path d="M15 30c0-8.3 6.7-15 15-15h45v90H30c-8.3 0-15-6.7-15-15V30z" 
          fill="url(#appleBook)" opacity="0.95"/>
    <path d="M75 15h45c8.3 0 15 6.7 15 15v60c0 8.3-6.7 15-15 15H75V15z" 
          fill="url(#appleBook)" opacity="0.8"/>
    
    <!-- Book spine -->
    <rect x="73" y="15" width="4" height="90" fill="#b45309"/>
    
    <!-- Page lines -->
    <g opacity="0.7">
      <line x1="25" y1="38" x2="65" y2="38" stroke="#fbbf24" stroke-width="1.5"/>
      <line x1="25" y1="45" x2="62" y2="45" stroke="#fbbf24" stroke-width="1.5"/>
      <line x1="25" y1="52" x2="65" y2="52" stroke="#fbbf24" stroke-width="1.5"/>
      <line x1="25" y1="59" x2="58" y2="59" stroke="#fbbf24" stroke-width="1.5"/>
      <line x1="25" y1="66" x2="64" y2="66" stroke="#fbbf24" stroke-width="1.5"/>
      
      <line x1="83" y1="38" x2="125" y2="38" stroke="#fbbf24" stroke-width="1.5"/>
      <line x1="83" y1="45" x2="122" y2="45" stroke="#fbbf24" stroke-width="1.5"/>
      <line x1="83" y1="52" x2="125" y2="52" stroke="#fbbf24" stroke-width="1.5"/>
      <line x1="83" y1="59" x2="118" y2="59" stroke="#fbbf24" stroke-width="1.5"/>
    </g>
    
    <!-- Heart accent -->
    <g transform="translate(95, 22)">
      <path d="M15 7c-4.1 0-7.5 3.4-7.5 7.5 0 5.6 7.5 11.25 7.5 11.25s7.5-5.65 7.5-11.25c0-4.1-3.4-7.5-7.5-7.5z" 
            fill="url(#appleHeart)"/>
      <path d="M7.5 13c0-3 2.5-5.5 5.5-5.5s5.5 2.5 5.5 5.5-5.5 9-5.5 9-5.5-6-5.5-9z" 
            fill="url(#appleHeart)" opacity="0.8"/>
      <!-- Heart highlight -->
      <ellipse cx="13" cy="11" rx="2" ry="3" fill="#ffffff" opacity="0.5"/>
    </g>
  </g>
  
  <!-- Corner accent -->
  <circle cx="150" cy="150" r="8" fill="#d97706" opacity="0.4"/>
</svg> 
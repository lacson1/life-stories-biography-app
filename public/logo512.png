<!-- This SVG should be converted to PNG 512x512 -->
<svg width="512" height="512" viewBox="0 0 512 512" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient512" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fef7e0;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#fef3c7;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fed7aa;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="bookGradient512" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#f59e0b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d97706;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="heartGradient512" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f87171;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#ef4444;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#dc2626;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow512" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="8" dy="16" stdDeviation="16" flood-opacity="0.25"/>
    </filter>
    <filter id="innerShadow" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="2" dy="4" stdDeviation="4" flood-opacity="0.1"/>
    </filter>
  </defs>
  
  <!-- Background with premium gradient -->
  <rect width="512" height="512" rx="96" fill="url(#bgGradient512)"/>
  
  <!-- Subtle background pattern -->
  <circle cx="448" cy="64" r="24" fill="#f59e0b" opacity="0.1"/>
  <circle cx="64" cy="448" r="32" fill="#d97706" opacity="0.1"/>
  <circle cx="80" cy="80" r="16" fill="#fbbf24" opacity="0.15"/>
  
  <!-- Main book container -->
  <g transform="translate(96, 96)" filter="url(#shadow512)">
    <!-- Book shadow/base -->
    <ellipse cx="160" cy="300" rx="140" ry="20" fill="#000000" opacity="0.1"/>
    
    <!-- Left page -->
    <path d="M40 80c0-22 18-40 40-40h120v240H80c-22 0-40-18-40-40V80z" 
          fill="url(#bookGradient512)" opacity="0.95" filter="url(#innerShadow)"/>
    
    <!-- Right page -->
    <path d="M200 40h120c22 0 40 18 40 40v160c0 22-18 40-40 40H200V40z" 
          fill="url(#bookGradient512)" opacity="0.85" filter="url(#innerShadow)"/>
    
    <!-- Book spine with depth -->
    <rect x="196" y="40" width="8" height="240" fill="#b45309"/>
    <rect x="200" y="40" width="4" height="240" fill="#92400e"/>
    
    <!-- Page content lines -->
    <g opacity="0.8">
      <!-- Left page lines -->
      <line x1="60" y1="100" x2="180" y2="100" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
      <line x1="60" y1="120" x2="170" y2="120" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
      <line x1="60" y1="140" x2="180" y2="140" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
      <line x1="60" y1="160" x2="160" y2="160" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
      <line x1="60" y1="180" x2="175" y2="180" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
      <line x1="60" y1="200" x2="165" y2="200" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
      <line x1="60" y1="220" x2="180" y2="220" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
      
      <!-- Right page lines -->
      <line x1="220" y1="100" x2="340" y2="100" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
      <line x1="220" y1="120" x2="330" y2="120" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
      <line x1="220" y1="140" x2="340" y2="140" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
      <line x1="220" y1="160" x2="320" y2="160" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
      <line x1="220" y1="180" x2="335" y2="180" stroke="#fde68a" stroke-width="3" stroke-linecap="round"/>
    </g>
    
    <!-- Premium heart accent with glow -->
    <g transform="translate(260, 60)">
      <!-- Heart glow -->
      <path d="M40 20c-12 0-20 10-20 20 0 15 20 30 20 30s20-15 20-30c0-10-8-20-20-20z" 
            fill="url(#heartGradient512)" opacity="0.3" transform="scale(1.2)"/>
      <!-- Main heart -->
      <path d="M40 20c-12 0-20 10-20 20 0 15 20 30 20 30s20-15 20-30c0-10-8-20-20-20z" 
            fill="url(#heartGradient512)"/>
      <!-- Heart highlight -->
      <path d="M25 35c0-8 7-15 15-15s15 7 15 15-15 25-15 25-15-17-15-25z" 
            fill="url(#heartGradient512)" opacity="0.9"/>
      <!-- Heart shine -->
      <ellipse cx="35" cy="30" rx="6" ry="8" fill="#ffffff" opacity="0.4"/>
    </g>
    
    <!-- Page corner details -->
    <path d="M180 40L180 60L160 40z" fill="#e5e7eb" opacity="0.6"/>
    <path d="M340 40L340 60L320 40z" fill="#e5e7eb" opacity="0.6"/>
  </g>
  
  <!-- Premium corner accents -->
  <circle cx="448" cy="448" r="20" fill="#d97706" opacity="0.4"/>
  <circle cx="64" cy="64" r="16" fill="#f59e0b" opacity="0.4"/>
  
  <!-- Subtle brand mark -->
  <text x="256" y="460" text-anchor="middle" font-family="serif" font-size="24" font-weight="300" fill="#92400e" opacity="0.6">Life Stories</text>
</svg> 